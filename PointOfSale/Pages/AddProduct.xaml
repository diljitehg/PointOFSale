<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointOfSale.Pages.AddProduct"
             Title="AddProduct">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add Product" FontSize="Large" HorizontalOptions="Center" Margin="0,20"/>
           
            <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="Center" Margin="0,20"/>
            <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>